<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2962FF</item>
        <item name="colorPrimaryVariant">#0039CB</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">@color/colorWhite</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="colorOnBackground">#F44336</item>

        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="checkboxStyle">@style/AppCheckBox</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="AppCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorSurface">@color/colorWhite</item>
    </style>

    <style name="HeaderTextView" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ItemTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EmptyStateTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>