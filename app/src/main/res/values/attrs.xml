<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="percentage" format="float" />
    <attr name="strokeWidth" format="dimension" />
    <attr name="strokeMargin" format="dimension" />
    <attr name="color" format="color|reference" />

    <declare-styleable name="PieChart">
        <attr name="android:rotation" format="float" />
        <attr name="percentage" />
        <attr name="strokeWidth"  />
        <attr name="strokeMargin" />
        <attr name="color" />
    </declare-styleable>

    <declare-styleable name="PieProgress">
        <attr name="android:rotation" format="float" />
        <attr name="percentage" />
        <attr name="strokeWidth"  />
        <attr name="strokeMargin" />
        <attr name="color" />
    </declare-styleable>
</resources>